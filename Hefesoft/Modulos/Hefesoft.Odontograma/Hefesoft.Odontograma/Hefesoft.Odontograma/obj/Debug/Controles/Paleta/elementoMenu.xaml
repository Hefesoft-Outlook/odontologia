<UserControl x:Class="Cnt.Panacea.Xap.Odontologia.Assets.elementoMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100" d:DesignWidth="200">
	
    <Viewbox x:Name="LayoutRoot">		
    	
        <Grid HorizontalAlignment="Stretch" Height="100" VerticalAlignment="Stretch" Width="200">
    		<Grid.ColumnDefinitions>
    			<ColumnDefinition/>
    		</Grid.ColumnDefinitions>
    		<Border x:Name="border1" BorderThickness="4" CornerRadius="4" BorderBrush="Black">
        		<Grid/>
        	</Border>
    		<Grid Margin="2">
    			<Grid.ColumnDefinitions>
    				<ColumnDefinition Width="80*"/>
    				<ColumnDefinition Width="120*"/>
    			</Grid.ColumnDefinitions>
    			<Border x:Name="border">
    				<Image x:Name="image" Stretch="None"/>
    			</Border>    		
    			<TextBlock x:Name="txtBlckSimbolo" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64"/>
    			<Rectangle x:Name="rectangle" Stroke="Black"/>
    			<TextBlock x:Name="txtBlckLetra" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="64"/>
    			<TextBlock x:Name="TxtBlckDescripcion" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" Grid.Column="1"/>
    		</Grid>
    	</Grid>

	</Viewbox>
</UserControl>

