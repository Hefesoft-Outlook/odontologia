<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hefesoft.Periodontograma.Assets.Menu_Opciones"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Placa="using:Hefesoft.Periodontograma.Assets.Placa" xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="Hefesoft.Periodontograma.Assets.Menu_Opciones.Placa"
    mc:Ignorable="d"
    d:DesignHeight="20"
    d:DesignWidth="60">
    
	<Grid>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<Placa:PlacaElemento x:Name="placaElemento1" 
				Placa="{Binding Placa1}" PointerPressed="placaElemento1_PointerPressed" Margin="1,0,0,0" VerticalAlignment="Center">				
			</Placa:PlacaElemento>

			<Placa:PlacaElemento x:Name="placaElemento2" 
				Placa="{Binding Placa2}" Grid.Column="1" PointerPressed="placaElemento2_PointerPressed" Margin="1,0,0,0" VerticalAlignment="Center">				
			</Placa:PlacaElemento>

			<Placa:PlacaElemento x:Name="placaElemento3" 
				Placa="{Binding Placa3}" Grid.Column="2" PointerPressed="placaElemento3_PointerPressed" Margin="1,0,0,0" VerticalAlignment="Center">				
			</Placa:PlacaElemento>

		</Grid>

	</Grid>
</UserControl>
