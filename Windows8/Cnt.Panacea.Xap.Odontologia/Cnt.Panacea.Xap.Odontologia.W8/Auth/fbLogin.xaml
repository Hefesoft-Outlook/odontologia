<UserControl
    x:Class="App2.Auth.fbLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2.Auth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:facebookControls="using:Facebook.Client.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel>
            <Image Name="Imagen"></Image>
            <TextBlock Name="Nombre"></TextBlock>
            <Button Click="Button_Click"
                    Width="100"
                    >
                <Image Source="ms-appx:///Assets/Images/Facebook.png"></Image>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
